extends ../layouts/main-layout.pug

include ../mixins/createProduct.pug

block content
  .container-fluid.mb-4.px-0
    .row.align-items-center.g-0
      .col-auto
        include ../includes/search.pug
      .col
      .col-auto
        include ../includes/filter.pug
  
  .row
    .col-md-3
      include ../includes/menu.pug
    .col-md-9
      #productContainer.row
        if products.length > 0
          each product in products
            +createProduct(product)
        else
          h1 No Products

  script.
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('productSearchInput');
      const searchButton = document.getElementById('searchButton');
      
      function filterProducts() {
          const searchTerm = searchInput.value.toLowerCase();
          const products = document.querySelectorAll('.col-md-4');
          
          products.forEach(product => {
              const productName = product.querySelector('.product-name').textContent.toLowerCase();
              product.style.display = productName.includes(searchTerm) ? 'block' : 'none';
          });
      }
      
      searchInput.addEventListener('input', filterProducts);
      searchButton.addEventListener('click', filterProducts);
    });