extends ../layouts/main-layout.pug

block content
    .col-lg-9

        if errorMessage 
            div.alert.alert-danger.col-sm-7 !{errorMessage}

        form(action="/admin/add-product" method="POST" enctype="multipart/form-data")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            .form-group.row
                label(for="name").col-sm-2.col-form-label Product Name
                .col-sm-10
                    input.form-control#name(type="text" name="name" value=`${inputs.name}`)
            .form-group.row
                label(for="price").col-sm-2.col-form-label Price
                .col-sm-10
                    input.form-control#price(type="text" name="price" value=`${inputs.price}`)
            .form-group.row
                label(for="imgUrl").col-sm-2.col-form-label Image
                .col-sm-10
                    input.form-control-file#image(type="file" name="imgUrl")
            .form-group.row
                label(for="categoryid").col-sm-2.col-form-label Category
                .col-sm-10
                    each category in categories 
                        input(type="checkbox" name="categoryids" value=`${category._id}` checked=category.selected)
                        | #{category.name}
                        br
            .form-group.row
                label(for="description").col-sm-2.col-form-label Description
                .col-sm-10
                    textarea.form-control(id="editor" name="description" cols="30" value=`${inputs.description}`)
            .form-group.row
                .col-sm-10-offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary
block script
    script(src="https://cdn.jsdelivr.net/npm/ckeditor@4.11.3/ckeditor.js")
    script(src="/js/script.js")
