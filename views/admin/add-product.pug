extends ../layouts/main-layout.pug

block content
    .col-lg-9
        form(action="/admin/add-product" method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            .form-group.row
                label(for="name").col-sm-2.col-form-label Product Name
                .col-sm-10
                    input.form-control#name(type="text" name="name")
            .form-group.row
                label(for="price").col-sm-2.col-form-label Price
                .col-sm-10
                    input.form-control#price(type="text" name="price")
            .form-group.row
                label(for="imgUrl").col-sm-2.col-form-label Image
                .col-sm-10
                    input.form-control#image(type="text" name="imgUrl")
            //- .form-group.row
            //-     label(for="categoryid").col-sm-2.col-form-label Category
            //-     .col-sm-10
            //-         select.form-control#categoryid(name="categoryid")
            //-             option(value="-1") Select Category
            //-             each category in categories
            //-                 option(value=`${category.id}`) #{category.name}
            .form-group.row
                label(for="description").col-sm-2.col-form-label Description
                .col-sm-10
                    textarea.form-control(name="description" cols="30")
            .form-group.row
                .col-sm-10-offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary
