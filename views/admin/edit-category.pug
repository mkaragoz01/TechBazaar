extends ../layouts/main-layout.pug

block content
    .col-lg-9
        form(action="/admin/categories" method="POST")

            input(type='hidden' name='id' value=`${category._id}`)

            .form-group.row
                label(for="name").col-sm-2.col-form-label Name
                .col-sm-10
                    input.form-control#name(type="text" name="name" value=`${category.name}`)
            .form-group.row
                label(for="description").col-sm-2.col-form-label Description
                .col-sm-10
                    textarea.form-control(id="editor" name="description" cols="30") #{category.description}
            .form-group.row
                .col-sm-10-offset-sm-2
                input(type="submit" value="Save Category").btn.btn-primary
block script
    script(src="https://cdn.jsdelivr.net/npm/ckeditor@4.11.3/ckeditor.js")
    script(src="/js/script.js")