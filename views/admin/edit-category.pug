extends ../layouts/main-layout.pug

block content
    .container.mt-4
        .row.justify-content-center
            .col-lg-6
                .card.border-0.shadow-sm.rounded-3.overflow-hidden
                    .card-header.bg-gradient.position-relative.py-3.border-0
                        .bg-primary.position-absolute.top-0.start-0.end-0.bottom-0.opacity-75
                        h5.card-title.mb-0.position-relative.text-white.text-center
                            i.fas.fa-folder-open.me-2
                            | Kategori Düzenle
                    .card-body.p-4
                        form(action="/admin/categories" method="POST").needs-validation
                            input(type='hidden' name='_csrf' value=`${csrfToken}`)
                            input(type='hidden' name='id' value=`${category._id}`)

                            .mb-3
                                label(for="name").form-label.fw-semibold Kategori Adı
                                .input-group
                                    span.input-group-text.bg-light.border-0.shadow-sm
                                        i.fas.fa-folder.text-primary
                                    input.form-control.shadow-sm.border-0#name(
                                        type="text" 
                                        name="name" 
                                        value=`${category.name}`
                                        placeholder="Kategori adını giriniz"
                                        required
                                    )
                                .form-text.text-muted.mt-1.small
                                    i.fas.fa-info-circle.me-1
                                    | Örneğin: Elektronik, Giyim vb.

                            .mb-3
                                label(for="description").form-label.fw-semibold Açıklama
                                .input-group
                                    span.input-group-text.bg-light.border-0.shadow-sm
                                        i.fas.fa-align-left.text-primary
                                    textarea.form-control.shadow-sm.border-0#editor(
                                        name="description" 
                                        rows="4"
                                        placeholder="Kategori açıklamasını giriniz"
                                        required
                                    ) #{category.description}

                            .d-flex.justify-content-end.mt-4.gap-2
                                a.btn.btn-light.btn-sm.px-3.shadow-sm(href="/admin/categories")
                                    i.fas.fa-times.me-1
                                    | İptal
                                button.btn.btn-primary.btn-sm.px-3.shadow-sm(type="submit")
                                    i.fas.fa-save.me-1
                                    | Kaydet

block script
    script(src="https://cdn.jsdelivr.net/npm/ckeditor@4.11.3/ckeditor.js")
    script(src="/js/script.js")
    style.
        .bg-gradient {
            background: linear-gradient(45deg, #2563eb, #3b82f6);
        }
        .form-control:focus,
        .form-control:active {
            border-color: #2563eb;
            box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.15);
        }
        .input-group-text {
            border: none;
        }
        .form-label {
            font-size: 0.9rem;
        }
        .form-text {
            font-size: 0.8rem;
        }
