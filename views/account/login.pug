extends ../layouts/main-layout.pug

block content
  .container.title-container
    .row.justify-content-center
      .col-md-8.col-lg-6.col-xl-5
        .text-center.mb-5
          h1.site-title TechStore
          .title-underline
        
        .card.shadow-lg.border-0
          .card-header.bg-primary.text-white.rounded-top
            h4.text-center.mb-0 Hoş Geldiniz
          
          .card-body.px-5.pt-5.pb-4
            if errorMessage
              .alert.alert-danger.alert-dismissible(role="alert")
                | !{errorMessage}
                button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Kapat")
            
            form(action="/login" method="POST")
              input(type="hidden" name="_csrf" value=`${csrfToken}`)
              
              .form-group.mb-4
                label(for="email").h6.font-weight-bold E-posta Adresi
                .input-group
                  .input-group-prepend
                    span.input-group-text.bg-light
                      i.fas.fa-envelope
                  input.form-control#email(
                    type="email" 
                    name="email"
                    placeholder="ornek@email.com"
                    required
                  )
              
              .form-group.mb-4
                label(for="password").h6.font-weight-bold Şifre
                .input-group
                  .input-group-prepend
                    span.input-group-text.bg-light
                      i.fas.fa-lock
                  input.form-control#password(
                    type="password" 
                    name="password"
                    placeholder="••••••••"
                    required
                  )
              
              .d-flex.justify-content-between.align-items-center.mb-4
                .form-check
                  input.form-check-input#rememberMe(
                    type="checkbox"
                    name="rememberMe"
                  )
                  label.form-check-label(for="rememberMe") Beni Hatırla
                a.text-primary(href="/reset-password") Şifremi Unuttum?
              
              button.btn.btn-primary.btn-block.mt-3.py-2(
                type="submit"
              ) 
                i.fas.fa-sign-in-alt.mr-2
                | Giriş Yap
          
          .card-footer.text-center.py-3.bg-light.rounded-bottom
            p.mb-0 Hesabınız yok mu? 
              a.font-weight-bold.text-primary(href="/register") Kayıt Olun