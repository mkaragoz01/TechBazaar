extends ../layouts/main-layout.pug

block content
    .col-lg-9
        if errorMessage 
            div.alert.alert-danger.col-sm-7 #{errorMessage}
        form(action="/reset-password" method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            .form-group.row
                label(for="email").col-sm-2.col-form-label Email
                .col-sm-10
                    input.form-control#name(type="text" name="email")
            .form-group.row
                .col-sm-10-offset-sm-2
                input(type="submit" value="Reset").btn.btn-primary
            